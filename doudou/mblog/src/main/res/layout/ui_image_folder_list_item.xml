<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_image_folder"
        fresco:placeholderImage="@color/picture_no"
        fresco:placeholderImageScaleType="fitCenter"
        android:layout_width="@dimen/image_folder_item_height"
        android:layout_height="@dimen/image_folder_item_height" />

    <TextView
        android:id="@+id/tv_folder_name"
        android:textSize="@dimen/default_text_size"
        android:textColor="@color/clouds"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent" />

    <com.beardedhen.androidbootstrap.FontAwesomeText
        android:padding="10dp"
        fontawesometext:fa_icon="fa-angle-right"
        android:textColor="@color/clouds"
        android:gravity="center"
        android:textSize="@dimen/default_text_size"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

</merge>